<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="table"
            type="com.example.barcodereader.network.properties.get.marble.Table" />
    </data>


    <LinearLayout
        android:id="@+id/view_holder"
        style="@style/linear_layout_card_view_result_fragment"
        android:background="@drawable/table_row_stroke">

        <TextView
            android:id="@+id/brandName"
            style="@style/text_view_view_holder"
            android:layout_weight="10"
            android:hint="Brand Name"
            android:text="@{table.brandName}" />

        <TextView
            android:id="@+id/amount"
            style="@style/text_view_view_holder"
            android:layout_weight="6"
            android:hint="Amount"
            android:text="@{table.amount}" />

        <TextView
            android:id="@+id/number"
            style="@style/text_view_view_holder"
            android:layout_weight="6"
            android:hint="Number"
            android:text="@{table.number}" />
    </LinearLayout>
</layout>